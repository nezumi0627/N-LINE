/* N-LINE Cybernetic Theme v3 - "Deep Dive" */
/* Optimized based on Spy Ancestry & Class Extraction */

/* --- 1. Global Reset & Fonts --- */
QWidget {
    color: #ecf0f1;
    font-family: "Segoe UI", "Meiryo UI", sans-serif;
    font-size: 14px;
    selection-background-color: #d35400; /* Neon Orange Selection */
    selection-color: white;
}

/* --- 2. Main Window Background --- */
/* Targeting the root window classes found */
QWidget#AllInOneWindow, QWidget#MainWindow, QWidget[class="AllInOneWindow"] {
    background-image: url("c:/projects/N-LINE/bg.png");
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-color: #1a1a1d;
}

/* --- 3. Left Sidebar (Friends/Chats List) --- */
MainChatPanel, QWidget[class="MainChatPanel"] {
    background-color: rgba(20, 20, 30, 0.85); /* Darker sidebar */
    border-right: 1px solid rgba(80, 200, 255, 0.2);
}

/* The List View Itself */
LcListView, QListView {
    background-color: transparent;
    border: none;
    outline: none;
}

/* List Items (Friends/Chats) */
LcListView::item, QListView::item {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding: 5px;
}

LcListView::item:hover, QListView::item:hover {
    background-color: rgba(52, 152, 219, 0.2); /* Faint Blue Hover */
}

LcListView::item:selected, QListView::item:selected {
    background-color: rgba(230, 126, 34, 0.4); /* Orange Selected */
    border-left: 4px solid #e67e22;
}

/* Search Bar (LcTextField) in Sidebar */
LcTextField {
    background-color: rgba(0, 0, 0, 0.5);
    border: 1px solid #5d6d7e;
    border-radius: 15px; /* Rounded pill shape */
    padding: 2px 10px;
    color: white;
}
LcTextField:focus {
    border: 1px solid #3498db;
    background-color: rgba(0, 0, 0, 0.8);
}

/* --- 4. Right Chat Area --- */
AllInOneChatPanel, QWidget[class="AllInOneChatPanel"] {
    background-color: rgba(30, 30, 40, 0.7); /* Lighter transparency for content */
}

/* The actual message scrolling area */
ChatMessageView, QWidget[class="ChatMessageView"] {
    background-color: transparent; /* Let the hexagon bg show through! */
}

/* Message Input Area */
MessageInputPanel, QWidget[class="MessageInputPanel"] {
    background-color: rgba(20, 20, 30, 0.95);
    border-top: 2px solid #3498db; /* Neon Blue line separating chat and input */
}

AutoSuggestTextArea {
    background-color: transparent;
    color: white;
    border: none;
}

/* --- 5. Top Controls (Header/TitleBar) --- */
LcTitleBar {
    /* "Adding" a visual element (logo/gradient) to the header */
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #141e30, stop:1 #243b55);
    border-bottom: 2px solid #00f260; /* Neon Green Line */
    min-height: 50px;
}

/* Targeted based on Spy Results */
TabBar {
    background: transparent;
    margin-left: 10px;
}

TabButton {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: none;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    margin-right: 4px;
    min-width: 100px;
    padding: 4px 8px;
}

TabButton:hover {
    background-color: rgba(0, 242, 96, 0.2); /* Neon Green Hover */
}

/* The LcCheckBox inside seems to be the tab Label/icon container */
TabButton LcCheckBox {
    color: #bdc3c7;
    font-weight: bold;
    font-size: 13px;
    spacing: 5px;
}
TabButton LcCheckBox::indicator {
    /* Hide the checkbox square if present, making it look like a pure tab */
    width: 0px; 
    height: 0px;
}
TabButton:checked LcCheckBox, TabButton:pressed LcCheckBox {
    color: #ffffff;
}

/* The small 20x20 button found in Scan (Maybe New Tab/Menu?) */
LcTitleBar LcButton {
    background-color: transparent;
    border: 1px solid #e74c3c;
    border-radius: 10px; /* Circular */
    width: 20px;
    height: 20px;
}
LcTitleBar LcButton:hover {
    background-color: #e74c3c;
}

ChatAnnouncementPanel {
    background-color: rgba(231, 76, 60, 0.8); /* Red announcement background */
    border-radius: 5px;
    margin: 5px;
    color: white;
}

/* --- 6. Splitters & Scrollbars --- */
LcSplitter::handle {
    background-color: rgba(52, 152, 219, 0.5);
    width: 2px;
}

LcScrollBar, QScrollBar:vertical {
    background: rgba(0, 0, 0, 0.3);
    width: 8px;
    margin: 0;
    border-radius: 4px;
}
QScrollBar::handle:vertical {
    background: #bdc3c7;
    min-height: 20px;
    border-radius: 4px;
}
QScrollBar::handle:vertical:hover {
    background: #3498db;
}

/* --- 7. Buttons --- */
LcButton, QPushButton {
    background-color: rgba(52, 152, 219, 0.2);
    border: 1px solid #3498db;
    border-radius: 4px;
    color: #ecf0f1;
}
LcButton:hover, QPushButton:hover {
    background-color: rgba(52, 152, 219, 0.6);
    box-shadow: 0 0 10px #3498db;
}



